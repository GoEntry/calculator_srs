root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript, Vue, and other
[*.{js,ts,vue}]
indent_size = 2
max_line_length = 80

# JSON files
[*.json]
indent_size = 2
quote_type = double

# Markdown files
[*.md]
max_line_length = 80

# CSS, SCSS, and Less
[*.{css,scss,less}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2
max_line_length = 80
